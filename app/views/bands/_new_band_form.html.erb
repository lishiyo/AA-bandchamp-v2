<div>
  <div class="close-modal" data-dismiss="modal">
    <div class="lr">
      <div class="rl">
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">

    <div class="modal-body" style="padding: 30px;">
      <ul class="errors"></ul>

			<%= form_for @band, remote: true, html: { class: "form-horizontal", style: "display:inline;" } do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date_created, "Date Formed" %>
        <%= f.date_field :date_created, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :tagline %>
        <%= f.text_field :tagline, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control"  %>
      </div>
			<%= f.submit class: "btn btn-primary" %>
			
			<% end %>
    <!-- TO-DO: accepts nested attributes for members -->
    </div> <!-- modal-body -->

    <div class="modal-footer">
			
      <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
    </div>

  </div>
</div>
</div> <!--modal content-->



