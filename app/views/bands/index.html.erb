<h1>All Bands</h1>

<ol class="breadcrumb" id="nav-crumbs">
  <li><a href="/">HOME</a></li>
	<li <%= 'class="active"' if params[:controller] == 'bands' %>><a href="#">BANDS</a></li>
</ol>

<!-- hits new.js.erb -->
<div class="row">
  <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3 header-sub-row">
 <%= link_to "Add a Band", new_band_url, remote: true, class: "btn btn-primary" %>
  <!-- ajax div -->
  <div class="new-band text-center"></div>
</div>
</div>

<div class="row">
	<h2>Featured</h2>
  <div class="col-lg-6 col-md-6 col-lg-offset-2 col-md-offset-3">
  </div>
</div>

<div class="row">
	<h2>Most Popular</h2>
  <div class="col-lg-6 col-md-6 col-lg-offset-2 col-md-offset-3">
  </div>
</div>

<div class="row">
	<h2>Most Recent</h2>
  <div class="col-lg-6 col-md-6 col-lg-offset-2 col-md-offset-3">
    <% Band.recent.each do |band| %>
    <%= render partial: 'band_preview', locals: { band: band } %>
    <% end %>
  </div>

</div>

<!-- hidden modal: new band form -->
<div id="new-band-modal" class="portfolio-modal modal fade  modal-bands-defaults" aria-hidden="true"></div>
