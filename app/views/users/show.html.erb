<h1><%= @user.email %> </h1>

<div class="row">
		
	<div class="container">
		<% if same_user?(@user) %>
		<div class="upload-zone">
				<button type="button" class="btn btn-info btn-upload" data-toggle="modal" data-target="#myModal">Upload New</button>
		</div>
		
		<br />
		<% end %>
		
	<div id="#dropzone_area" class="container-fluid">
		<% @user.images.each do |image| %>
			<%= image_tag image.attachment.url(:thumb) %>
		<% end %>
	</div>
	
		<%= render partial: 'shared/image_upload', locals: { subject: @user, load_action: load_image_user_url(@user), attach_action: user_url(@user) } %>
		
	</div>
		
</div>