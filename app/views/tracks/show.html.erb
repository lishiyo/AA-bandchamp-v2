<!-- TRACK#show -->

<ol class="breadcrumb" id="nav-crumbs">
  <li><a href="/">HOME</a></li>
  <li <%= 'class="active"' if params[:controller] == 'bands' %>><%= link_to "BANDS", bands_url %></li>
  <li><%= link_to @track.band.name, band_url(@track.band) %></li>
  <li><%= link_to @track.album.name, album_url(@track.album) %></li>
  <li><%= link_to @track.name, track_url(@track) %></li>
</ol>

<!-- main -->
<div class="row title-row">

  <div class="col-lg-6 col-md-6 col-xs-6 col-lg-offset-2 col-md-offset-2 col-xs-offset-2">
    <h1>
      <%= render partial: 'shared/delete_subject', locals: { action_url: track_url(@track) } %>
      <%= @track.name %>
    </h1>

    <div>
      <%= ugly_lyrics(@track.lyrics) %>
    </div>

    <!-- Display Notes table-->
    <div class="row">
		
			<div id="notes_table">
				<% url = "/tracks/#{@track.id}/notes/" %>
				<%= render partial: 'shared/notes_table', locals: { owner_notes: @track.notes, destroy_action: url } %>
    	</div>
			
    </div>


  </div>

  <!-- SIDEBAR RIGHT -->
  <div class="col-lg-3 col-md-3 col-xs-3 col-lg-offset-1 col-md-offset-1 col-xs-offset-1" style="padding-top: 20px;">

      <button type="button" class="btn btn-info btn-upload btn-edit-header" data-toggle="modal" data-target="#modal_edit_track">edit info</button>
      <span>&nbsp; &nbsp;</span>
      <%= add_images("#myModal") %>

      <!-- ADD A NOTE -->

      <%= render partial: 'notes/form', locals: { track: @track, action_name: add_note_track_url(@track), subj_type: "#{params[:controller].classify}", subj_id: "#{params[:id]}" } %>

  </div>

</div>


<!-- MODAL: edit album -->
<%= render partial: 'modal_edit_track', locals: { track: @track, album: @track.album, band: @track.band } %>
<!-- MODAL: dropzone -->
<%= render partial: 'shared/image_upload', locals: { subject: @track, load_action: load_image_track_url(@track), attach_action: track_url(@track) } %>


<br>
