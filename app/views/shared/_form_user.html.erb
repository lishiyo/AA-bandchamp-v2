<div class="col-md-6 col-md-offset-3">
	<%= form_tag(action_name, method: :post, html: { multipart: true}) do %>

	<%= label_tag 'user[email]', "Email" %>
	<% if user %>
		<%= text_field_tag('user[email]', user.email, class: "form-control") %>
	<% else %>
		<%= text_field_tag('user[email]', nil, class: "form-control") %>
	<% end %>
	<%= label_tag 'user[password]', "Password" %>
	<%= password_field_tag('user[password]', "", class: "form-control") %>

	<%= submit_tag("sign up", class: "btn btn-info") %>
<% end %>
</div>
